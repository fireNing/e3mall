<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        ">

    <context:property-placeholder location="classpath:conf/resource.properties"/>

    <context:component-scan base-package="cn.hpn.search.controller" />
    <mvc:annotation-driven />

    <bean
            class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/" />
        <property name="suffix" value=".jsp" />
    </bean>
    <!--全局异常捕获-->
    <bean class="cn.hpn.search.exception.GlobalExceptionReslover"></bean>
    <!-- 引用dubbo服务 -->
    <dubbo:application name="e3-search-web"/>
    <dubbo:registry protocol="zookeeper" address="192.168.25.129:2181"/>
    <dubbo:reference interface="cn.hpn.quest.service.SearchService" id="searchService" timeout="600000" />
</beans>